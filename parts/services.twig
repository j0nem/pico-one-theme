<section id="services" itemscope itemtype="http://scheme.org/WebPage">

  <div class="inside">

    <h1 itemprop="headline">{{ meta.services.title }}</h1>

    <div class="categories">

      {% for key,category in meta.services.categories %}

        <div class="category {{ key }}">
          <div class="nowrap">
            <img src="{{ category.icon }}" width="50px" alt="{{ category.icon_alt }}">
            <span class="headline">{{ category.title }}</span>
          </div>
          <ul>
          {% for el in category.items %}
            <li>{{ el }}</li>
          {% endfor %}
          </ul>
        </div>

      {% endfor %}

    </div>

    <div class="external-logos" itemscope itemtype="http://schema.org/ImageGallery">
      
      {% for logo in meta.services.logos %}
      
        <a href="{{ logo.link }}" target="_blank" rel="noopener">
          <div class="logo" itemscope itemtype="http://schema.org/ImageObject">
            <picture itemscope itemtype="http://schema.org/ImageObject">
              <source srcset="assets/{{ logo.image }}_sw.webp" type="image/webp">
              <img class="sw" src="assets/{{ logo.image }}_sw.png" alt="{{ logo.name }}">
            </picture>
            <picture itemscope itemtype="http://schema.org/ImageObject">
              <source srcset="assets/{{ logo.image }}_cl.webp" type="image/webp">
              <img class="cl" src="assets/{{ logo.image }}_cl.png" alt="{{ logo.name }}">
            </picture>
          </div>
        </a>

      {% endfor %}

    </div>
    
  </div>

</section>